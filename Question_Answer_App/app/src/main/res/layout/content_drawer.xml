<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Drawer"
    tools:showIn="@layout/app_bar_drawer">


    <androidx.cardview.widget.CardView
        android:id="@+id/java"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_marginTop="100dp"
        android:layout_marginRight="13dp"
        android:layout_marginLeft="13dp"
        app:cardCornerRadius="2dp">
        
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="26dp"
            android:layout_marginTop="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/java"
            app:civ_border_color="@color/colorPrimaryDark"
            app:civ_border_width="2dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Java"
            android:textColor="@color/colorAccent"
            android:layout_marginTop="21dp"
            android:textSize="20dp"
            android:layout_marginLeft="150dp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Basic Question"
            android:textColor="#000"
            android:layout_marginTop="43dp"
            android:textSize="15dp"
            android:layout_marginLeft="150dp"

            />
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/python"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_marginTop="22dp"
        android:layout_marginRight="13dp"
        android:layout_marginLeft="13dp"
        app:cardCornerRadius="2dp"
        android:layout_below="@+id/java">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="26dp"
            android:layout_marginTop="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/pyhton"
            app:civ_border_color="@color/colorPrimaryDark"
            app:civ_border_width="2dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Python"
            android:textColor="@color/colorAccent"
            android:layout_marginTop="21dp"
            android:textSize="20dp"
            android:layout_marginLeft="150dp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Basic Question"
            android:textColor="#000"
            android:layout_marginTop="43dp"
            android:textSize="15dp"
            android:layout_marginLeft="150dp"

            />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/aptitude"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_marginTop="22dp"
        android:layout_marginRight="13dp"
        android:layout_marginLeft="13dp"
        app:cardCornerRadius="2dp"
        android:layout_below="@+id/python">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginLeft="26dp"
            android:layout_marginTop="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/brain"
            app:civ_border_color="@color/colorPrimaryDark"
            app:civ_border_width="2dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Aptitude"
            android:textColor="@color/colorAccent"
            android:layout_marginTop="21dp"
            android:textSize="20dp"
            android:layout_marginLeft="150dp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Basic Question"
            android:textColor="#000"
            android:layout_marginTop="43dp"
            android:textSize="15dp"
            android:layout_marginLeft="150dp"

            />


    </androidx.cardview.widget.CardView>


    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-3870552280259267/3725924220">
    </com.google.android.gms.ads.AdView>


</RelativeLayout>